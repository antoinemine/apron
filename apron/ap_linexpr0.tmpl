/* ====================================================================== */
/* I. Memory management and printing */
/* ====================================================================== */

void ap_linexpr0_init(ap_linexpr0_t res, ap_scalar_discr_t discr, size_t size)
{
  res->ref = false;
  res->discr = discr;
  SWITCH(discr)
    res->linexpr.XXX = itvXXX_linexpr_alloc(size);
  ENDSWITCH
}
void ap_linexpr0_init_set(ap_linexpr0_t res,ap_linexpr0_t e)
{
  res->ref = false;
  res->discr = e->discr;
  SWITCH(e->discr)
    res->linexpr.XXX = itvXXX_linexpr_alloc_set(e->linexpr.XXX);
  ENDSWITCH
}
MACROX
void ap_linexpr0_init_set_XXX(ap_linexpr0_t res, itvXXX_linexpr_t e)
{
  ap_linexpr0_init(res,AP_SCALAR_XXX,e->size);
  itvXXX_linexpr_set(res->linexpr.XXX,e);
}
ENDMACRO
void ap_linexpr0_clear(ap_linexpr0_t e)
{
  if (e->ref==false){
    SWITCH(e->discr)
      itvXXX_linexpr_clear(e->linexpr.XXX);
    ENDSWITCH
  }
}
void ap_linexpr0_fprint(FILE* stream, ap_linexpr0_t e, char** name_of_dim)
{
  SWITCH(e->discr){
    itvXXX_linexpr_fprint(stream,e->linexpr.XXX,name_of_dim);
  ENDSWITCH
}
void ap_linexpr0_minimize(ap_linexpr0_t e)
{
  SWITCH(e->discr){
    itvXXX_linexpr_minimize(e->linexpr.XXX);
  ENDSWITCH
}

