MACROX
bool ap_linexpr0_set_itvXXX_linexpr(ap_linexpr0_t a, itvXXX_linexpr_t b, numinternal_t intern)
{
  switch (a->discr){
  case AP_SCALAR_D:
    return itvD_linexpr_set_itvXXX_linexpr(a->linexpr.D,b,intern);
  case AP_SCALAR_MPQ:
    return itvMPQ_linexpr_set_itvXXX_linexpr(a->linexpr.MPQ,b,intern);
  case AP_SCALAR_MPFR:
    return itvMPFR_linexpr_set_itvXXX_linexpr(a->linexpr.MPFR,b,intern);
  default:
    abort();
  }
}
bool itvXXX_linexpr_set_ap_linexpr0(itvXXX_linexpr_t a, ap_linexpr0_t b, numinternal_t intern)
{
  switch(b->discr){
  case AP_SCALAR_D:
    return itvXXX_linexpr_set_itvD_linexpr(a,b->linexpr.D,intern);
  case AP_SCALAR_MPQ:
    return itvXXX_linexpr_set_itvMPQ(a,b->linexpr.MPQ);
  case AP_SCALAR_MPFR:
    return itvXXX_linexpr_set_itvMPFR_linexpr(a,b->linexpr.MPFR,intern);
  default:
    abort();
  }
}
ENDMACRO

/* ====================================================================== */
/* III. Access */
