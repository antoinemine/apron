void ap_lincons0_linexpr0ref(ap_linexpr0_t e, ap_lincons0_t c)
{
  e->ref = true;
  e->discr = c->discr;
  SWITCH (e->discr)
    e->linexpr.XXX = c->lincons.XXX->linexpr;
  ENDSWITCH
}
