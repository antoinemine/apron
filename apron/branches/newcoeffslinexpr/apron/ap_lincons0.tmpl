{
  itvconstyp_t* p;
  SWITCH (c->discr)
    p = &c->lincons.XXX->constyp;
  ENDSWITCH
  return p;
}
mpq_ptr ap_lincons0_mpqref(ap_lincons0_t c)
{
  mpq_ptr p;
  SWITCH (c->discr)
    p = c->lincons.XXX->mpq;
  ENDSWITCH
