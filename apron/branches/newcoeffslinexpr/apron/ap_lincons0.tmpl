/* ====================================================================== */
/* I. Memory management and printing */
/* ====================================================================== */

void ap_lincons0_init(ap_lincons0_t res, ap_scalar_discr_t discr, size_t size)
{
  res->ref = false;
  res->discr = discr;
  SWITCH(discr)
    res->lincons.XXX = itvXXX_lincons_alloc(size);
  ENDSWITCH
}
void ap_lincons0_init_set(ap_lincons0_t res,ap_lincons0_t e)
{
  res->ref = false;
  res->discr = e->discr;
  SWITCH(e->discr)
    res->lincons.XXX = itvXXX_lincons_alloc_set(e->lincons.XXX);
  ENDSWITCH
}
MACROX
void ap_lincons0_init_set_XXX(ap_lincons0_t res, itvXXX_lincons_t e)
{
  ap_lincons0_init(res,AP_SCALAR_XXX,e->linexpr->size);
  itvXXX_lincons_set(res->lincons.XXX,e);
}
ENDMACRO
void ap_lincons0_clear(ap_lincons0_t e)
{
  if (e->ref==false){
    SWITCH(e->discr)
      itvXXX_lincons_clear(e->lincons.XXX);
    ENDSWITCH
  }
}
void ap_lincons0_fprint(FILE* stream, ap_lincons0_t e, char** name_of_dim)
{
  SWITCH(e->discr)
    itvXXX_lincons_fprint(stream,e->lincons.XXX,name_of_dim);
  ENDSWITCH
}
void ap_lincons0_minimize(ap_lincons0_t e)
{
  SWITCH(e->discr)
    itvXXX_linexpr_minimize(e->lincons.XXX->linexpr);
  ENDSWITCH
}

