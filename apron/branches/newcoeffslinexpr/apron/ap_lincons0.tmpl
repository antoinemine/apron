{
  switch (a->discr){
  case AP_SCALAR_D:
    itvD_lincons_set(a->lincons.D,b);
    return true;
  case AP_SCALAR_MPQ:
    return itvMPQ_lincons_set_itvD_lincons(a->lincons.MPQ,b,intern);
