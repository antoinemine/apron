bool ap_linexpr0_array_set_itvD_linexpr_array(ap_linexpr0_array_t a, itvD_linexpr_array_t b, numinternal_t intern)
{
  switch (a->discr){
  case AP_SCALAR_D:
    itvD_linexpr_array_set(a->linexpr_array.D,b);
    return true;
  case AP_SCALAR_MPQ:
    return itvMPQ_linexpr_array_set_itvD_linexpr_array(a->linexpr_array.MPQ,b,intern);
  case AP_SCALAR_MPFR:
