/* ====================================================================== */
/* I. Memory management and printing */
/* ====================================================================== */

void ap_linexpr0_array_init(ap_linexpr0_array_t a, ap_scalar_discr_t discr, size_t size)
{
  a->ref = false;
  a->discr = discr;
  SWITCH(discr)
    a->linexpr_array.XXX = itvXXX_linexpr_array_alloc(size);
  ENDSWITCH
}
void ap_linexpr0_array_init_set(ap_linexpr0_array_t a,ap_linexpr0_array_t b)
{
  a->ref = false;
  a->discr = b->discr;
  SWITCH(a->discr)
    a->linexpr_array.XXX = itvXXX_linexpr_array_alloc_set(b->linexpr_array.XXX);
  ENDSWITCH
}
void ap_linexpr0_array_minimize(ap_linexpr0_array_t a)
{
  SWITCH(a->discr)
    itvXXX_linexpr_array_minimize(a->linexpr_array.XXX);
  ENDSWITCH
}
void ap_linexpr0_array_clear(ap_linexpr0_array_t a)
{
  SWITCH(a->discr)
    itvXXX_linexpr_array_clear(a->linexpr_array.XXX);
  ENDSWITCH
}

void ap_linexpr0_array_fprint(FILE* stream, ap_linexpr0_array_t e, char** name_of_dim)
{
  SWITCH(e->discr)
    itvXXX_linexpr_array_fprint(stream,e->linexpr_array.XXX,name_of_dim);
  ENDSWITCH
}

